#:import utils kivy.utils

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"
                # background_color: utils.get_color_from_hex('#CDAD00')
                background_color: (157/255, 157/255, 157/255, 1)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "CE"
                background_color: (157/255, 157/255, 157/255, 1)

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                background_color: (157/255, 157/255, 157/255, 1)

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                on_press: root.button_press(7)


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                on_press: root.button_press(8)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                on_press: root.button_press(9)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                background_color: (157/255, 157/255, 157/255, 1)

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                on_press: root.button_press(4)


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                on_press: root.button_press(5)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                on_press: root.button_press(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                background_color: (157/255, 157/255, 157/255, 1)

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                on_press: root.button_press(1)


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                on_press: root.button_press(2)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                on_press: root.button_press(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                background_color: (157/255, 157/255, 157/255, 1)

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                on_press: root.button_press(0)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                background_color: (157/255, 157/255, 157/255, 1)